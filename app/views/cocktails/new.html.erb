<div class="container">
  <div class="form-row">
    <div class="col-xs-6 col-sm-6">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add a cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
